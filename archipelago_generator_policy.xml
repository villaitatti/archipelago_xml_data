<?xml version="1.0" encoding="UTF-8"?>
<generator_policy>

	<!-- Type -->
	<generator name="000-type" prefix="arc">
		<pattern>type/{type_id}</pattern>
	</generator>

	<!-- Built Work-->

	<!-- Event -->

	<!-- Actor -->
	<generator name="300-actor" prefix="arc">
		<pattern>actor/{actor_id}</pattern>
	</generator>

	<!-- identify actors -->
	<generator name="310-actor-identifier" prefix="arc">
		<pattern>actor/{actor_id}/identifier</pattern>
	</generator>
	<generator name="311-actor-identifier-name" prefix="arc">
		<pattern>actor/{actor_id}/given_name</pattern>
	</generator>
	<generator name="312-actor-identifier-surname" prefix="arc">
		<pattern>actor/{actor_id}/surname</pattern>
	</generator>
	<generator name="313-actor-identifier-alias" prefix="arc">
		<pattern>actor/{actor_id}/alias</pattern>
	</generator>
	<generator name="314-actor-identifier-title" prefix="arc">
		<pattern>actor/{actor_id}/title/{title_id}</pattern>
	</generator>

	<!-- Actor's birth -->
	<generator name="320-actor-birth" prefix="arc">
		<pattern>actor/{actor_id}/birth</pattern>
	</generator>
	<generator name="323-actor-birth-date" prefix="arc">
		<pattern>actor/{actor_id}/birth/date</pattern>
	</generator>

	<!-- Actor's death -->
	<generator name="330-actor-death" prefix="arc">
		<pattern>actor/{actor_id}/death</pattern>
	</generator>
	<generator name="333-actor-death-date" prefix="arc">
		<pattern>actor/{actor_id}/death/date</pattern>
	</generator>

	<!-- Actor's activity -->
	<generator name="340-actor-activity" prefix="arc">
		<pattern>actor/{actor_id}/activity/{activity_id}</pattern>
	</generator>
	<generator name="341-actor-activity-start" prefix="arc">
		<pattern>actor/{actor_id}/activity/{activity_id}/start</pattern>
	</generator>
	<generator name="342-actor-activity-end" prefix="arc">
		<pattern>actor/{actor_id}/activity/{activity_id}/end</pattern>
	</generator>

	<!-- Actor's marriage -->
	<generator name="350-actor-marriage" prefix="arc">
		<pattern>marriage/{marriage_id}</pattern>
	</generator>
	<generator name="353-actor-marriage-date" prefix="arc">
		<pattern>marriage/{marriage_id}/date</pattern>
	</generator>

	<!-- Actor's will -->
	<generator name="360-actor-will" prefix="arc">
		<pattern>will/{will_id}</pattern>
	</generator>
	<generator name="363-actor-will-date" prefix="arc">
		<pattern>will/{will_id}/date</pattern>
	</generator>

	<!-- Actor's biography -->
	<generator name="370-actor-biography" prefix="arc">
		<pattern>biography</pattern>
	</generator>

	<!-- Actor's image -->
	<generator name="380-actor-image" prefix="arc">
		<pattern>image</pattern>
	</generator>

	<!-- Source -->

	<!-- Bibliographic Item -->

	<!-- Place -->
	<generator name="600-place" prefix="arc">
		<pattern>place/{place_id}</pattern>
	</generator>

	<generator name="URIorUUID">
		<custom generatorClass="gr.forth.URIorUUID">
			<set-arg name="text"></set-arg>
		</custom>
	</generator>
	
</generator_policy>