<generator_policy>

    <generator name="artistURI" prefix="arc">
        <pattern>person/{id}</pattern>
    </generator>
    <generator name="ArtistIdentifierURI" prefix="arc">
        <pattern>person/{id}/identifier</pattern>
    </generator>
    <generator name="idURI" prefix="arc">
        <pattern>person/{id}/id</pattern>
    </generator>
    <generator name="placeURI" prefix="arc">
        <pattern>place/{id}/</pattern>
    </generator>
        <generator name="hollisUIRI" prefix="arc">
        <pattern>person/{id}/hollis</pattern>
    </generator>
    <generator name="ArtistAppellationURI" prefix="arc">
        <pattern>person/{id}/appellation</pattern>
    </generator>
    <generator name="workURI" prefix="arc">
        <pattern>work/{id}</pattern>
    </generator>
    <generator name="workIdentifierURI" prefix="arc">
        <pattern>work/{id}/identifier</pattern>
    </generator>
    <generator name="workProductionURI" prefix="arc">
        <pattern>work/{id}/production</pattern>
    </generator>
    <generator name="workProductionTimeURI" prefix="arc">
        <pattern>work/{id}/production/timespan</pattern>
    </generator>
  <!--  we are using the institution ID to build the trasfer of custody URI node.  -->
    <generator name="transferURI" prefix="arc">
        <pattern>work/{id}/transfer/{insitutionID}</pattern>
    </generator>
    <generator name="photoURI" prefix="arc">
        <pattern>photo/{id}</pattern>
    </generator>
    <generator name="photoRectoURI" prefix="arc">
        <pattern>photo/{id}/recto</pattern>
    </generator>
    <generator name="photoRectoImageURI" prefix="arc">
        <pattern>photo/{id}/recto/image</pattern>
    </generator>
    <generator name="photoVersoURI" prefix="arc">
        <pattern>photo/{id}/verso</pattern>
    </generator>
    <generator name="photoVersoImageURI" prefix="arc">
        <pattern>photo/{id}/verso/image</pattern>
    </generator>
    <generator name="institutionURI" prefix="arc">
        <pattern>institution/{id}</pattern>
    </generator>
    <generator name="institutionType" prefix="arc">
        <pattern>institution/{id}/type</pattern>
    </generator>
    <generator name="institutionPlace" prefix="arc">
        <pattern>institution/{id}/place</pattern>
    </generator>
    <generator name="institutionCollection" prefix="arc">
        <pattern>institution/{id}/collection</pattern>
    </generator>  
    <generator name="CollectionURI" prefix="arc">
        <pattern>collection/{id}</pattern>
    </generator>  
    <generator name="conceptObjectURI" prefix="arc">
        <pattern>conceptual_object/{id}</pattern>
    </generator>
    <generator name="prefLabel">
        <pattern>{label}</pattern>
    </generator>
    <generator name="SimpleLabel">
        <pattern>{label}</pattern>
    </generator>
    <generator name="URIorUUID">
        <custom generatorClass="gr.forth.URIorUUID">
            <set-arg name="text"/>
        </custom>
    </generator>
        <generator name="XsdTypeGenerator">
        <custom generatorClass="gr.forth.XsdTypeGenerator">
            <set-arg name="text"/>
        </custom>
    </generator>
	
    <!--
 create other generator policies for other classes in our model diagram
-->
</generator_policy>